if command -v hatch >/dev/null ; then
    hatch version
    return
elif [ -x venv/bin/python ] ; then
    PYTHONPATH=. venv/bin/python -m pytermor -s
    return
else
    echo "Failed to determine executor" >&2
    return 1
fi
